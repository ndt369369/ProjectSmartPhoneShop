<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".activity.DangNhapActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:src="@drawable/alluraphone" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#123"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:text="Hello!"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Welcome to ShopNDT. We hope you will be satisfied with your choice."
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="130dp"
            android:layout_height="34dp"
            android:layout_marginRight="40dp"
            android:id="@+id/btn_sing_in"
            android:background="@drawable/custom_radius"
            android:text="Sign in" />
        <Button
            android:layout_width="130dp"
            android:layout_height="34dp"
            android:text="Sign Up"
            android:id="@+id/btn_sign_up"
            android:textColor="@color/white"
            android:background="@drawable/custom_radius2"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or via social media"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
         android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="48dp"
            android:layout_marginRight="16dp"
            android:id="@+id/img_login_google"
            android:src="@drawable/icongoogle"
            android:layout_height="48dp"
            />
        <ImageView
            android:src="@drawable/iconfacebook"
            android:id="@+id/img_login_facebook"
            android:layout_width="48dp"
            android:layout_height="48dp"
            />
    </LinearLayout>

</LinearLayout>